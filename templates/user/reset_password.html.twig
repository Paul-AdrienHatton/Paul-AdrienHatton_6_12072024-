{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Réinitialisez votre mot de passe</h1>

    <!-- Affichage des messages flash -->
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Formulaire de réinitialisation de mot de passe -->
    {{ form_start(resetPasswordForm) }}
        <div class="form-group mb-3">
            {{ form_label(resetPasswordForm.newPassword, 'Nouveau mot de passe') }}
            {{ form_widget(resetPasswordForm.newPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(resetPasswordForm.newPassword) }}
        </div>

        <button type="submit" class="btn btn-primary w-100">Réinitialiser</button>
    {{ form_end(resetPasswordForm) }}

    <div class="text-center mt-3">
        <a href="{{ path('app_login') }}" class="text-decoration-none">Retour à la connexion</a>
    </div>
</div>
{% endblock %}
