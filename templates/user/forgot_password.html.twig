{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Mot de passe oublié</h1>

    <!-- Display flash messages -->
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Forgot Password Form -->
    {{ form_start(forgotPasswordForm) }}
        <div class="form-group mb-3">
            {{ form_label(forgotPasswordForm.email) }}
            {{ form_widget(forgotPasswordForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(forgotPasswordForm.email) }}
        </div>
        <button type="submit" class="btn btn-primary w-100">Envoyer le lien de réinitialisation</button>
    {{ form_end(forgotPasswordForm) }}

    <div class="text-center mt-3">
        <a href="{{ path('app_login') }}" class="text-decoration-none">Retour à la connexion</a>
    </div>
</div>
{% endblock %}
